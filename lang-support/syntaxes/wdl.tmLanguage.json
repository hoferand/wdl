{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "wdl",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#types"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#semantic_strings"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#modules"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.wdl",
			"begin": "//",
			"end": "\n"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.wdl",
					"match": "\\b(if|else|while|continue|break|return|actions|par)\\b"
				},
				{
					"name": "keyword.other.wdl",
					"match": "\\b(let|function|true|false|null|global|use|type)\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.name.wdl",
					"match": "[a-zA-Z_][a-zA-Z_0-9]*\\b"
				}
			]
		},
		"modules": {
			"patterns": [
				{
					"name": "support.class",
					"match": "([a-zA-Z_][a-zA-Z_0-9]*(?=::))|((?<=use\\s+)[a-zA-Z_][a-zA-Z_0-9]*)"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.wdl",
					"match": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\("
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.integer.wdl",
					"match": "\\b(\\d+)\\b"
				},
				{
					"name": "constant.numeric.decimal.wdl",
					"match": "\\b(\\d+\\.\\d+)\\b"
				}
			]
		},
		"semantic_strings": {
			"patterns": [
				{
					"name": "string.regexp",
					"match": "[rusa]\"[^\"]*\""
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.wdl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.wdl",
					"match": "\\\\."
				}
			]
		},
		"types": {
      "patterns": [
				{
          "name": "support.type",
          "match": "\\b(void|bool|number|string|any)\\b"
        }
      ]
    }
	},
	"scopeName": "source.wdl"
}